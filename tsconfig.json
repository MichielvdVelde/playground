{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["jest"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
